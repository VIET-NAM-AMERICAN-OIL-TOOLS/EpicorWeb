@model List<EpicorWeb.Models.PurchaseInvoiceListVN>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
     data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full" style="font-size:9px">
    <div class="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-end">
                            <button type="submit" class="btn btn-success text-white" onclick="exportExcel()">Xuất Excel</button>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Purchase Invoice List VN</h5>
                            <div class="table-responsive">
                                <table id="zero_config" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Stt</th>
                                            <th>InvoceNum</th>
                                            <th>InvoiceDate</th>
                                            <th>Applydate</th>
                                            <th>Name</th>
                                            <th>TaxPayerID</th>
                                            <th>InvoiceAmt</th>
                                            <th>TaxAmt</th>
                                            <th>Percentt</th>
                                            <th>Descriptionn</th>
                                        </tr>
                                    </thead>
                                    @if (Model != null && Model.Any())
                                    {
                                        <tbody>
                                            @foreach (var inv in Model)
                                            {
                                                <tr>
                                                    <td>@Html.DisplayFor(modelItem => inv.Stt)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.InvoiceNum)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.InvoiceDate)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Applydate)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Name)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.TaxPayerID)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.InvoiceAmt)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.TaxAmt)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Percentt)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Descriptionn)</td>
                                                </tr>
                                            }
                                        </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section css{
    <link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet">
    }

@section script{
    <script src="~/assets/extra-libs/DataTables/datatables.min.js"></script>
    <script>
        $('#zero_config').DataTable();
    </script>
    <script>
        function exportExcel() {
            // Gửi một yêu cầu HTTP GET đến controller và hành động cụ thể
            window.location.href = "/PurchaseInvoiceListVN/PurchaseInvoiceListVNExportExcel";
        }
    </script>
    }