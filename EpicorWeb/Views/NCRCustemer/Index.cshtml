<body>
    <div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
         data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">
        <div class="page-wrapper" style="margin-left:0px">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="card-title">Vinam NCR CUSTOMER</h3>
                                </div>
                                <div class="card col-md-12">
                                    <form action="~/NCRCustomer/NCRCustomerByDate" method="get">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label class="mt-3">From Date</label>
                                                    <div class="input-group">
                                                        <input type="text" class="form-control datepicker-autoclose" id="fromDate" name="fromDate"
                                                               placeholder="mm/dd/yyyy" autocomplete="off">

                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="mt-3">To Date</label>
                                                    <div class="input-group">
                                                        <input type="text" class="form-control datepicker-autoclose" id="toDate" name="toDate"
                                                               placeholder="mm/dd/yyyy" autocomplete="off">

                                                    </div>
                                                </div>
                                                <div class="col-md-4 d-flex align-items-end">
                                                    <button type="submit" class="btn btn-md btn-success text-white invoiceLoc me-2"
                                                            id="export-button" name="export-button">
                                                        Xuất Dữ Liệu
                                                    </button>
                                                    <button type="submit" class="btn btn-md btn-success text-white invoiceLoc"
                                                            id="export-excel-button" name="export-excel-button">
                                                        Xuất Excel
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="input-group">
                                                <p class="text-danger mt-3">
                                                    @TempData["VinamPurchaseInvoiceListShow_Error"]
                                                </p>
                                            </div>
                                    </form>
                                </div>
                                <div class="table-container">
                                    <div class="table-responsive">
                                        <table id="zero_config" class="table table-striped table-bordered">
                                            <thead style="font-weight:bold !important">
                                                <tr>
                                                    <th>STT</th>
                                                    <th>CASE NUMBER</th>
                                                    <th>TOPIC ID</th>
                                                    <th>CASE DESCRIPTION</th>
                                                    <th>CUSTOMER NAME</th>
                                                    <th>ORDER</th>
                                                    <th>PART</th>
                                                    <th>COMPLAINT QUALITY</th>
                                                    <th>CONTRACT</th>
                                                    <th>CREATED DATE</th>
                                                    <th>CREATED BY</th>
                                                    <th>DESCRIPTION</th>
                                                    <th>COMPLETION DATE</th>
                                                    <th>COMPLETION BY</th>
                                                    <th>CASE STATUS</th>
                                                    <th>RESOLUTION</th>
                                                    <th>STAGE ID</th>
                                                    <th>LEGAL NUMBER</th>
                                                    <th>LINE</th>
                                                    <th>RETURN</th>
                                                    <th>RMA DATE</th>
                                                    <th>RMA STATUS</th>
                                                    <th>RETURN QUANTITY</th>
                                                    <th>RETURN REASON</th>
                                                    <th>RECEIVED QUATITY</th>
                                                    <th>RECEIVED DATE</th>
                                                    <th>DISPOSITION TYPE</th>
                                                    <th>DISPOSITION QUATITY</th>
                                                    <th>DISPOSITION REASON CODE</th>
                                                    <th>RVC</th>
                                                </tr>
                                            </thead>
                                            <tbody class="dataTables_scroll">
                                                @foreach (DataRow row in Model.Rows)
                                                {
                                                    <tr>
                                                        <td>@row["stt"]</td>
                                                        <td>@row["HDCase_HDCaseNum"]</td>
                                                        <td>@row["HDCase_TopicID1"]</td>
                                                        <td>@row["HDCase_Description"]</td>
                                                        <td>@row["HDCase_CustomerName"]</td>
                                                        <td>@row["HDCase_OrderNum"]</td>
                                                        <td>@row["HDCase_PartNum"]</td>
                                                        <td>@row["HDCase_Quantity"]</td>
                                                        <td>@row["HDCase_ContractNum"]</td>
                                                        <td>
                                                            @{
                                                                var dateValue = row["HDCase_CreatedDate"];
                                                                var formattedCreatedDate = dateValue != DBNull.Value ? string.Format("{0:dd/MM/yyyy}", Convert.ToDateTime(dateValue)) : "";
                                                            }
                                                            @formattedCreatedDate
                                                        </td>
                                                        <td>@row["HDCase_CreatedBy"]</td>
                                                        <td>@row["HDCase_PartDescription"]</td>
                                                        <td>
                                                            @{
                                                                var dateValue1 = row["HDCase_CompletionDate"];
                                                                var formattedCompletionDate = dateValue1 != DBNull.Value ? string.Format("{0:dd/MM/yyyy}", Convert.ToDateTime(dateValue1)) : "";
                                                            }
                                                            @formattedCompletionDate
                                                        </td>
                                                        <td>@row["HDCase_CompletedBy"]</td>
                                                        <td>@row["HDCase_HDCaseStatus"]</td>
                                                        <td>@row["HDCase_ResolutionText"]</td>
                                                        <td>@row["HDCase_CurrentWFStageID"]</td>
                                                        <td>@row["InvcHead_LegalNumber"]</td>
                                                        <td>@row["InvcDtl_InvoiceLine"]</td>
                                                        <td>@row["RMADtl_RMANum"]</td>
                                                        <td>
                                                            @{
                                                                var dateValue2 = row["RMAHead_RMADate"];
                                                                var formattedRMADate = dateValue2 != DBNull.Value ? string.Format("{0:dd/MM/yyyy}", Convert.ToDateTime(dateValue2)) : "";
                                                            }
                                                            @formattedRMADate
                                                        </td>
                                                        <td>@row["RMAHead_OpenRMA"]</td>
                                                        <td>@row["RMADtl_ReturnQty"]</td>
                                                        <td>@row["RMADtl_ReturnReasonCode"]</td>
                                                        <td>@row["RMARcpt_ReceivedQty"]</td>
                                                        <td>
                                                            @{
                                                                var dateValue3 = row["RMARcpt_RcvDate"];
                                                                var formattedRcvDate = dateValue3 != DBNull.Value ? string.Format("{0:dd/MM/yyyy}", Convert.ToDateTime(dateValue3)) : "";
                                                            }
                                                            @formattedRcvDate
                                                        </td>
                                                        <td>@row["RMADisp_DispType"]</td>
                                                        <td>@row["RMADisp_DispQty"]</td>
                                                        <td>@row["RMADisp_ReasonCode"]</td>
                                                        <td>@row["RMADisp_RMADisp"]</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <link rel="stylesheet" type="text/css"
          href="~/assets/libs/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" type="text/css" href="~/assets/libs/quill/dist/quill.snow.css">
