    <style>
        /* Custom CSS to make datatable scrollable */

        .card .card-title {
            font-weight: bold;
            margin-bottom: 0px;
        }

        .border-top {
            padding: 10px; /* Thêm padding nếu cần */
        }

        #export-excel-button {
            margin-right: 9em; /* Điều chỉnh khoảng cách bên phải nếu cần */
            padding-right: 1em; /* Điều chỉnh padding bên phải nếu cần */
