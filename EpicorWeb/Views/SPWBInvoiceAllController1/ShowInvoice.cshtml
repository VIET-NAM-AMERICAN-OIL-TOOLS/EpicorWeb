@model List<EpicorWeb.Models.Invoices>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
     data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full" style="font-size:9px">
    <div class="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-end">
                            <button type="submit" class="btn btn-success text-white" onclick="exportExcel()">Xuất Excel</button>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Invoice All</h5>
                            <div class="table-responsive">
                                <table id="zero_config" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Invoice</th>
                                            <th>Suffix</th>
                                            <th>Date</th>
                                            <th>Due_date</th>
                                            <th>Open</th>
                                            <th>Typee</th>
                                            <th>Name</th>
                                            <th>Part</th>
                                            <th>Descriptionn</th>
                                            <th>LegalNumber</th>
                                            <th>CustInvNum</th>
                                            <th>Total_Inv_Amt</th>
                                            <th>Inv_Bal</th>
                                            <th>Currency</th>
                                            <th>Inv_Line</th>
                                            <th>PO</th>
                                            <th>PO_Line</th>
                                            <th>Sales_Order</th>
                                            <th>SO_Line</th>
                                            <th>Line_Amt</th>
                                            <th>UR_Check</th>
                                            <th>Entered_By</th>
                                            <th>Hold_Invoice</th>
                                        </tr>
                                    </thead>
                                    @if (Model != null && Model.Any())
                                    {
                                        <tbody>
                                            @foreach (var inv in Model)
                                            {
                                                <tr>
                                                    <td>@Html.DisplayFor(modelItem => inv.Invoice)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Suffix)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Date)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Due_date)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Open)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Type)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Name)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Part)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Description)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.LegalNumber)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.CustInvNum)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Total_Inv_Amt)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Inv_Bal)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Currency)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Inv_Line)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.PO)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.PO_Line)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Sales_Order)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.SO_Line)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Line_Amt)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.UR_Check)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Entered_By)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Hold_Invoice)</td>
                                                </tr>
                                            }
                                        </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section css{
    <link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet">
    }

@section script{
    <script src="~/assets/extra-libs/DataTables/datatables.min.js"></script>
    <script>
        $('#zero_config').DataTable();
    </script>
    <script>
        function exportExcel() {
            // Gửi một yêu cầu HTTP GET đến controller và hành động cụ thể
            window.location.href = "/SPWBInvoiceAll/SPWBInvoiceExportExcel";
        }
    </script>
    }