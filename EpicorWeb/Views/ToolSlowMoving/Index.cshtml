    <script>
        /****************************************
         *       Basic Table                   *
         ****************************************/
        $('#zero_config').DataTable({
            scrollY: '550px', // Chiều cao của phần cuộn dọc
            scrollX: true, // Bật cuộn ngang
            scrollCollapse: false, // Cho phép bảng bị thu gọn khi không đủ dữ liệu để cuộn
            paging: false // Bỏ phân trang nếu không cần
        });

        /*datwpicker*/
        jQuery('.datepicker-autoclose').datepicker({
            autoclose: true,
            todayHighlight: true,
            orientation: 'bottom'
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#export-excel-button").click(function (e) {
                e.preventDefault(); // Ngăn chặn form gửi dữ liệu một cách thông thường

                // Vô hiệu hóa button
                $(this).prop("disabled", true);

                // Gửi dữ liệu bằng Ajax đến controller
                $.ajax({
                    url: "/ToolSlowMoving/ExportExcel", // Đường dẫn đến action trong controller
                    type: "POST",
                    data: {
                        // Bạn có thể thêm dữ liệu cần thiết ở đây
                    },
                    xhrFields: {
                        responseType: 'blob'
                    },
                    success: function (data) {
                        var blob = new Blob([data], { type: 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet' });
                        var link = document.createElement('a');
                        link.href = window.URL.createObjectURL(blob);
                        link.download = 'VinamToolSlowMoving.xlsx'; // Đặt tên file Excel
                        link.style.display = 'none';

                        document.body.appendChild(link);
                        link.click();

                        window.URL.revokeObjectURL(link.href);
                        document.body.removeChild(link);

                        // Kích hoạt lại button
                        $("#export-excel-button").prop("disabled", false);
                    },
                    error: function (xhr, status, error) {
                        console.error("Lỗi: ", error);
                        // Kích hoạt lại button
                        $("#export-excel-button").prop("disabled", false);
                    }
                });
            });
        });
    </script>
