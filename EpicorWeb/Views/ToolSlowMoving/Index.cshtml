<body>
    <div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
         data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">
        <div class="page-wrapper" style="margin-left:0px">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between mb-2">
                                    <h3 class="card-title">VINAM TOOL SLOW MOVING</h3>
                                    <button type="submit" class="btn btn-md btn-success text-white invoiceLoc ml-auto"
                                            id="export-excel-button" name="export-excel-button">
                                        Xuất Excel
                                    </button>
                                </div>
                                <div class="table-container">
                                    <div class="table-responsive">
                                        <table id="zero_config" class="table table-striped table-bordered">
                                            <thead style="font-weight:bold !important">
                                                <tr>
                                                    <th>PART</th>
                                                    <th>DESCRIPTION</th>
                                                    <th>WAREHOUSE</th>
                                                    <th>LOT NUM</th>
                                                    <th>BEGIN QUANTITY</th>
                                                    <th>RECEIVED QUANTITY</th>
                                                    <th>ISSUED QUANTITY</th>
                                                    <th>END QUANTITY</th>
                                                    <th>END AMOUNT USD</th>
                                                    <th>CLASS ID</th>
                                                </tr>
                                            </thead>
                                            <tbody class="dataTables_scroll">
                                                @foreach (DataRow row in Model.Rows)
                                                {
                                                    <tr>
                                                        <td>@row["Part"]</td>
                                                        <td>@row["Description"]</td>
                                                        <td>@row["Warehouse"]</td>
                                                        <td>@row["LotNum"]</td>
                                                        @{
                                                            decimal decimalValue = decimal.Parse(row["BeginQuantity"].ToString(), CultureInfo.InvariantCulture);
                                                            decimal BeginQuantity = Math.Round(decimalValue, 2, MidpointRounding.ToZero);
                                                        }
                                                        <td>@BeginQuantity</td>
                                                        @* <td>@row["BeginQuantity"]</td> *@
                                                        @{
                                                            decimal decimalValue1 = decimal.Parse(row["ReceivedQuantity"].ToString(), CultureInfo.InvariantCulture);
                                                            decimal ReceivedQuantity = Math.Round(decimalValue1, 2, MidpointRounding.ToZero);
                                                        }
                                                        <td>@BeginQuantity</td>
                                                        @* <td>@row["ReceivedQuantity"]</td> *@
                                                        @{
                                                            decimal decimalValue2 = decimal.Parse(row["IssuedQuantity"].ToString(), CultureInfo.InvariantCulture);
                                                            decimal IssuedQuantity = Math.Round(decimalValue2, 2, MidpointRounding.ToZero);
                                                        }
                                                        <td>@IssuedQuantity</td>
                                                        @* <td>@row["IssuedQuantity"]</td> *@
                                                        @{
                                                            decimal decimalValue3 = decimal.Parse(row["EndQuantity"].ToString(), CultureInfo.InvariantCulture);
                                                            decimal EndQuantity = Math.Round(decimalValue3, 2, MidpointRounding.ToZero);
                                                        }
                                                        <td>@EndQuantity</td>
                                                        @* <td>@row["EndQuantity"]</td> *@
                                                        @{
                                                            decimal decimalValue4 = decimal.Parse(row["EndAmountUSD"].ToString(), CultureInfo.InvariantCulture);
                                                            decimal EndAmountUSD = Math.Round(decimalValue4, 2, MidpointRounding.ToZero);
                                                        }
                                                        <td>@EndAmountUSD</td>
                                                        @* <td>@row["EndAmountUSD"]</td> *@
                                                        <td>@row["ClassID"]</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <link rel="stylesheet" type="text/css"
