@model List<EpicorWeb.Models.VinamPurchaseInvoiceList>
@{
    if (Context.Request.Headers["x-requested-with"] == "XMLHttpRequest")
    {
        Layout = null;
    }
    else
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
     data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full" style="font-size:9px">
    <div class="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-12 d-flex justify-content-end">
                            <button type="submit" class="btn btn-success text-white" onclick="exportExcel()">Xuất Excel</button>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Vinam Purchase Invoice List</h5>
                            <div class="table-responsive">
                                <table id="zero_config" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Stt</th>
                                            <th>Company Name</th>
                                            <th>Business Tax Registration No:</th>
                                            <th>Currency</th>
                                            <th>Invoice Type</th>
                                            <th>Invoice Head</th>
                                            <th>Legal Number</th>
                                            <th>Invoice No.</th>
                                            <th>Invoice Date</th>
                                            <th>ApplyDate</th>
                                            <th>ReportDate</th>
                                            <th>Supplier Name</th>
                                            <th>Supplier Business Tax Registration No</th>
                                            <th>Purchase Amount (Without Tax)</th>
                                            <th>Tax Percent</th>
                                            <th>Tax Amount</th>
                                            <th>Description</th>
                                        </tr>
                                    </thead>
                                    @if (Model != null && Model.Any())
                                    {
                                        <tbody>
                                            @foreach (var inv in Model)
                                            {
                                                <tr>
                                                    <td>@Html.DisplayFor(modelItem => inv.Stt)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Company)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.StateTaxID)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Currency)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.DataCharacter)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.InvoiceHead)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.LegalNumber)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.InvoiceNum)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.InvoiceDate)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Applydate)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.ReportDate_c)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Namee)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.TaxPayerID)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.InvoiceAmt)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Percentt)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.TaxAmt)</td>
                                                    <td>@Html.DisplayFor(modelItem => inv.Description_c)</td>
                                                </tr>
                                            }
                                        </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section css{
    <link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet">
    }

@section script{
    <script src="~/assets/extra-libs/DataTables/datatables.min.js"></script>
    <script>
        $('#zero_config').DataTable();
    </script>
    <script>
        function exportExcel() {
            // Gửi một yêu cầu HTTP GET đến controller và hành động cụ thể
            window.location.href = "/VinamPurchaseInvoiceList/VinamPurchaseInvoiceListExportExcel";
        }
    </script>
    }