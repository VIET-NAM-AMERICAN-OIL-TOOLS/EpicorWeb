	});


</script>

<script>
	$(document).ready(function () {
		$('body').on('click', 'a.ajax-link', function (event) {
			event.preventDefault(); // Ngăn chặn hành động mặc định của liên kết
			var url = $(this).attr('href'); // Lấy URL từ thuộc tính href của liên kết

			$.ajax({
				url: url,
				type: 'GET',
				success: function (data) {
					$('#page-content').html(data); // Cập nhật nội dung của trang trong phần tử có id là #content
					// Cập nhật URL trong thanh địa chỉ trình duyệt
					window.history.pushState({}, '', url);
				},
				error: function () {
					console.log('Đã xảy ra lỗi');
				}
			});
		});
	});

</script>
